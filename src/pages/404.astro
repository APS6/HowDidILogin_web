---
import { Image } from "astro:assets";
import Logo from "../images/logo.webp";
import Example from "../images/examples.webp";
import "@fontsource/poppins/400.css";
import "@fontsource/poppins/500.css";
import "@fontsource/poppins/600.css";
import "@fontsource/poppins/700.css";
---

<html class="" lang="en">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" href="/favicon.ico" />
        <link
            rel="icon"
            type="image/png"
            sizes="16x16"
            href="/favicon-16x16.png"
        />
        <link
            rel="icon"
            type="image/png"
            sizes="32x32"
            href="/favicon-32x32.png"
        />
        <link
            rel="apple-touch-icon"
            sizes="180x180"
            href="/apple-touch-icon.png"
        />
        <link rel="manifest" href="/site.webmanifest" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content="{Astro.generator}" />
        <title>How Did I Login | Browser Extension</title>
        <meta
            name="description"
            content="How did I Login remembers login methods of all websites for you. The next time it places a ‘last used’ marker on the correct method. Available on Chrome and Firefox"
        />
        <meta
            name="keywords"
            content="Login Method, Remember Login, How did I login, login method, Remember sign in"
        />
        <meta
            property="og:title"
            content="How Did I Login | Browser Extension"
        />
        <meta
            property="og:description"
            content="How did I Login remembers login methods of all websites for you. The next time it places a ‘last used’ marker on the correct method. Available on Chrome and Firefox"
        />
        <meta
            property="og:image"
            content="https://howlogin.anirudha.pro/openGraph.png"
        />
        <meta property="og:url" content="https://howlogin.anirudha.pro/" />
        <meta property="twitter:card" content="summary_large_image" />
        <meta
            property="twitter:title"
            content="How Did I Login | Browser Extension"
        />
        <meta
            property="twitter:description"
            content="How did I Login remembers login methods of all websites for you. The next time it places a ‘last used’ marker on the correct method. Available on Chrome and Firefox"
        />
        <meta
            property="twitter:image"
            content="https://howlogin.anirudha.pro/openGraph.png"
        />
    </head>
    <body class="bg-white text-black font-poppins">
        <main
            class="h-screen w-full flex flex-col justify-center items-center bg-[#1A2238]"
        >
            <h1 class="text-9xl font-extrabold text-white tracking-widest">
                404
            </h1>
            <div class="bg-[#FF6A3D] px-2 text-sm rounded rotate-12 absolute">
                Page Not Found
            </div>
            <button class="mt-5">
                <a
                    href="/"
                    class="relative inline-block text-sm font-medium text-[#FF6A3D] group active:text-orange-500 focus:outline-none focus:ring"
                >
                    <span
                        class="absolute inset-0 transition-transform translate-x-0.5 translate-y-0.5 bg-[#FF6A3D] group-hover:translate-y-0 group-hover:translate-x-0"
                    ></span>

                    <span
                        class="relative block px-8 py-3 bg-[#1A2238] border border-current"
                    >
                        <div>Go Home</div>
                    </span>
                </a>
            </button>
        </main>
    </body>
</html>
